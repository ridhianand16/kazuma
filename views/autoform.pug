extends layout

block content

    div(class = "row")
        div(class="col-sm")
            h1 #{title}

    div(class = "row")
        div(class = "col-sm")
            form(method="POST",action= actionLink)
                table(class='table table-hover')
                    each val in variables
                        tr
                            td #{val.name}
                            td
                                input(type= val.type name= val.name class='form-control' required)
                    tr
                        td
                        td 
                            button(type="submit" class="btn btn-primary")
                                span(class="glyphicon glyphicon-plus") Submit
                        