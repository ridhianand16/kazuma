extends layout

block content
	body

		div(class = "row")
			div(class = "col-sm")
				h1 Registration
		
		form(method="POST",action="/register/user")
			div(class = "row")
				div(class = "col-sm")
						table(class='table table-hover')
							tr
								td UserName
								td 
									input(type='text' name="username" id ="username" class='form-control' required)
							tr
								td Name
								td 
									input(type='text' name= "name" id = "name" class='form-control' required)
							tr
								td Email
								td 
									input(type="email" name="email" id="email" class="form-control" placeholder="Enter valid email")
							tr
								td Password
								td
									input(type="password" name="password" id="password" class="form-control" placeholder="***********")
							tr 
								td Skills
								td
									input(type='text' name='skills' id='skills' class='form-control' placeholder='Enter comma separated skills')

							tr
								td
								td 
									button(type="submit" class="btn btn-primary")
										span(class="glyphicon glyphicon-plus") Submit

					i #{message}